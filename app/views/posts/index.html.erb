<h1>All Posts</h1>
<%= link_to "New post", new_post_path %><br><br>

<% @posts.each do |post| %>
  <% if current_user %>
    <%= post.user.name %>: 
  <% end %>
  <%= post.content %><br>
<% end %>
<br>
<% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "Log in", new_user_session_path %>
<% end %>